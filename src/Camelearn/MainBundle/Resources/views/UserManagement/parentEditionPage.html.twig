{% extends "::cl_base.html.twig" %}

{% block title %}{{ parent() }} - Creation compte parent{% endblock %}

{% block body %}
<br><br>
<div class="row">
  <div class="col-md-6 col-md-offset-3 well">
  	<h3>CameLearn - Creation du compte</h3>
  	<hr>
  	<div class="well" style="background-color:white;"><strong>Attention</strong> : Vous devez remplir tous les champs avant de continuer</div>
	 <form class="form-horizontal" role="form">
	 	<div class="form-group">
		<label for="inputEmail3" class="col-sm-2 control-label">Email</label>
		    <div class="col-sm-10">
		      	<input type="email" class="form-control" id="inputEmail3" placeholder="Email">
		    </div>
		 </div>
		 <div class="form-group">
		 	<label for="inputPassword3" class="col-sm-2 control-label">Password</label>
		    <div class="col-sm-10">
		      	<input type="password" class="form-control" id="inputPassword3" placeholder="Password">
		  	</div>
		  </div>
		  <div class="form-group">
		    <div class="col-sm-offset-2 col-sm-10">
		      <button type="submit" class="btn btn-success">Creer mon compte</button>
		      <a href="{{ path('camelearn_login') }}" class="btn btn-danger">Retour</a>
		    </div>
		  </div>
	</form>

  </div>
</div>
{% endblock %}
