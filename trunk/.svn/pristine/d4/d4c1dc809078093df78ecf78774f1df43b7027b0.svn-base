{% extends "::cl_base.html.twig" %}

{% block title %}{{ parent() }} - Login{% endblock %}
{% block body %}
<br><br>
<div class="row">
  <div class="col-md-6 col-md-offset-3 well">
  	<h3>CameLearn - Authentification</h3>
  	<hr>
	 <form class="form-horizontal" role="form">
	  <div class="form-group">
	    <label for="login" class="col-sm-3 control-label">Login</label>
	    <div class="col-sm-9">
	      <input type="text" class="form-control" id="login" placeholder="Votre login...">
	    </div>
	  </div>
	  <div class="form-group">
	    <label for="pwd" class="col-sm-3 control-label">Mot de passe</label>
	    <div class="col-sm-9">
	      <input type="password" class="form-control" id="pwd" placeholder="Votre mot de passe...">
	    </div>
	  </div>
	  <div class="form-group">
	    <div class="col-sm-offset-3 col-sm-9">
	      <button type="submit" class="btn btn-success">Se connecter</button>
	      <a class="btn btn-primary" href="{{ path('camelearn_parent_account_creation_page') }}">Je n'ai pas de compte</a>
	    </div>
	  </div>
	</form>
  </div>
</div>
{% endblock %}
